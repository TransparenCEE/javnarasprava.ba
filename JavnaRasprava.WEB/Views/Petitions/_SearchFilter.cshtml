@model JavnaRasprava.WEB.Models.PetitionHomeModel

<div>
    @using ( Ajax.BeginForm( "FilterPetitions", "Petitions", new { page = 1 }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "petitionGrid", InsertionMode = InsertionMode.Replace } ) )
    {
        <div class="form-group col-md-4">
            @Html.TextBox( "Title", "", htmlAttributes: new { @class = "form-control" }  )
        </div>
        <div class="form-group col-md-3">
            @Html.DropDownListFor( x => x.ParliamentId,
            Model.Parliaments.Parliaments.Select(
                x => new SelectListItem { Value = x.ParliamentID.ToString(), Text = x.Name }
            ).ToList(),
            GlobalLocalization.Petition_SearchFilter_InstitutionValuePlaceholder,
            htmlAttributes: new { @class="form-control"}
            )
        </div>
        <div class="col-md-2">
            <input class="btn btn-primary btn-block" type="submit" value="@GlobalLocalization.Global_Search_Button" />
        </div>
        <div class="col-md-3">
            @Html.ActionLink( GlobalLocalization.Petition_CreateNewPetition_Button, "Create", "Petitions", null, new { @class = "btn btn-success btn-block col-md-3" } )
        </div>
    }
</div>
