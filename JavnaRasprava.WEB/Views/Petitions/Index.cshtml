@model PetitionHomeModel
@{
    ViewBag.Title = GlobalLocalization.Petition_Index_PageTitle;
}

<h1>@ViewBag.Title</h1>
<div class="row">
        
    <div class="col-md-12">
        <h3>@GlobalLocalization.Petition_Search_Title</h3>
    </div>

    @Html.Partial( "_SearchFilter", Model)

    <div class="col-md-12">
        <div id="petitionGrid"></div>
    </div>
    
    <div class="col-md-6">
        <h3>@GlobalLocalization.Petition_MostActiveList_Title</h3>
        @Html.Partial( "_PetitionsTopList", Model.TopActivePetitions )
    </div>

    <div class="col-md-6">
        <h3>@GlobalLocalization.Petition_LatestList_Title</h3>
        @Html.Partial( "_PetitionsTopList", Model.LastSuccessfulPetitions )
    </div>
   

    
</div>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink( GlobalLocalization.Petition_PetitionManual_Link, "PetitionManual" )
    </div>
</div>