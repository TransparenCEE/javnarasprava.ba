@model JavnaRasprava.WEB.Models.Law.LawEditModel

@{
    ViewBag.Title = GlobalLocalization.Admin_Law_New_PageTitle;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@GlobalLocalization.Admin_Law_New_PageTitle</h2>

@using ( Html.BeginForm( "CreateLaw", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" } ) )
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary( true, "", new { @class = "text-danger" } )

        @Html.HiddenFor( x => x.ParliamentID )

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.Title, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Title )
                @Html.ValidationMessageFor( model => model.Title, "", new { @class = "text-danger" } )


            </div>
        </div>

      
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.Description, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Description )
                @Html.ValidationMessageFor( model => model.Description, "", new { @class = "text-danger" } )
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.Text, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Text )
                @Html.ValidationMessageFor( model => model.Text, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Submitter, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.Submitter, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Submitter )
                @Html.ValidationMessageFor( model => model.Submitter, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.DropDownListFor( model => model.CategoryId,
                                        Model.Categories .Select( x => new SelectListItem
                                            {
                                                Text = x.Title,
                                                Value = x.LawCategoryId.ToString()
                                            } ).ToList(),
                                    GlobalLocalization.Global_Dropdown_ValuePlaceHolder,
                                    new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.CategoryId )
                @Html.ValidationMessageFor( model => model.CategoryId, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpetedVotingDay, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.TextBoxFor( model => model.ExpetedVotingDay, "{0:dd.MM.yyyy}", new { @class = "form-control datepicker", placeholder = GlobalLocalization.Global_Dropdown_ValuePlaceHolder } )
                @Html.ValidationMessageFor( model => model.ExpetedVotingDay, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.Label( GlobalLocalization.Admin_Global_Image, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                <input type="File" name="Image" id="Image" value="@GlobalLocalization.Admin_Global_ChooseImage" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TextFile, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                <input type="File" name="TextFile" id="TextFile" value="@GlobalLocalization.Admin_Global_ChooseFile" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StatusTitle, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.StatusTitle, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.StatusTitle )
                @Html.ValidationMessageFor( model => model.StatusTitle, "", new { @class = "text-danger" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StatusText, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.StatusText, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.StatusText )
                @Html.ValidationMessageFor( model => model.StatusText, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProcedureID, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.DropDownListFor( model => model.ProcedureID,
                                        Model.Procedures.Select( x => new SelectListItem
                                            {
                                                Text = x.Title,
                                                Value = x.ProcedureID.ToString()
                                            } ).ToList(),
                                    GlobalLocalization.Global_Dropdown_ValuePlaceHolder,
                                    new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.ProcedureID )
                @Html.ValidationMessageFor( model => model.ProcedureID, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalLocalization.Admin_Global_Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(GlobalLocalization.Admin_Global_BackToList, "ManageLaws" )
</div>
