@model JavnaRasprava.WEB.Models.Law.LawSectionCustomVoteModel

@{
    ViewBag.Title = GlobalLocalization.Admin_CustomVote_Edit_PageTitle;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using ( Html.BeginForm() )
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary( true, "", new { @class = "text-danger" } )

        @Html.HiddenFor( model => model.LawID )
        @Html.HiddenFor( model => model.LawSectionID )
        @Html.HiddenFor( model => model.LawSectionCustomVoteID )

        <div class="form-group">
            @Html.LabelFor( model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.Text, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Text )
                @Html.ValidationMessageFor( model => model.Text, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor( model => model.Vote, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.DropDownListFor( model => model.Vote, new List<SelectListItem>
                                         {
                                             new SelectListItem { Text = GlobalLocalization.Global_Positive, Value = "true"},
                                             new SelectListItem { Text = GlobalLocalization.Global_Negative, Value = "false"}

                                         },
                                        GlobalLocalization.Global_Dropdown_ValuePlaceHolder,
                                         new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.Vote )
                @Html.ValidationMessageFor( model => model.Vote, "", new { @class = "text-danger" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor( model => model.IsSuggested, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.IsSuggested, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.RequiredFieldFor( model => model.IsSuggested )
                @Html.ValidationMessageFor( model => model.IsSuggested, "", new { @class = "text-danger" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor( model => model.AdminIgnore, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor( model => model.AdminIgnore )
                    @Html.RequiredFieldFor( model => model.AdminIgnore )
                    @Html.ValidationMessageFor( model => model.AdminIgnore, "", new { @class = "text-danger" } )
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalLocalization.Admin_Global_Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink( GlobalLocalization.Admin_Global_BackToList, "ManageLawSections", new { lawId = Model.LawID } )
</div>
