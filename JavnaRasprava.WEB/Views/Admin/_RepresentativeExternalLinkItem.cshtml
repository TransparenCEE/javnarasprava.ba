@model JavnaRasprava.WEB.Models.RepresentativeExternalLinkModel

<div id="divExternalLink_@Model.ExternalLinkID">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor( model => model.Description )
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Url) <a href="@Model.Url" target="_blank">@GlobalLocalization.Global_FollowLink</a>
        </dd>
    </dl>
    
    @Ajax.ActionLink(GlobalLocalization.Admin_Global_Delete, "DeleteRepresentativeExternalLinkItem", new { externalLinkID = Model.ExternalLinkID }, 
        new AjaxOptions { OnSuccess = "DeleteRepresentativeExternalLink", HttpMethod = "Post", Confirm = GlobalLocalization.Global_AreYouSureToDelete } )

</div>