@model JavnaRasprava.WEB.Models.Parliament.ParliamentEditModel

@{
    ViewBag.Title = GlobalLocalization.Admin_Parliament_Edit_PageTitle;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>@GlobalLocalization.Admin_Parliament_Edit_PageTitle</h3>

@using (Html.BeginForm("EditParliament", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ParliamentID, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", title = Html.DescriptionFor(x => x.Name) })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2", title = Html.DescriptionFor(x => x.Name) })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "control-label col-md-2", title = Html.DescriptionFor(x => x.Order) })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RepresentativesScreenTitle, htmlAttributes: new { @class = "control-label col-md-2", title = Html.DescriptionFor(x => x.RepresentativesScreenTitle) })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RepresentativesScreenTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RepresentativesScreenTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsExclusive, htmlAttributes: new { @class = "control-label col-md-2", title = Html.DescriptionFor(x => x.IsExclusive) })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsExclusive, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsExclusive, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalLocalization.Admin_Global_Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(GlobalLocalization.Admin_Global_BackToDetail, "ParliamentDetails", new { id = Model.ParliamentID }) |
    @Html.ActionLink(GlobalLocalization.Admin_Global_BackToList, "ManageParliament")
</div>
