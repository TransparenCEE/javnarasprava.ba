@model AnswerModel
@if ( Model.UserLiked.HasValue )
{
    if ( Model.UserLiked.Value )
    {
        <button type="button" class="btn btn-success disabled btn-xs">
            <span style="opacity:1" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> @Model.LikesCount
        </button>

        <button type="button" class="btn btn-danger disabled btn-xs">
            <span style="opacity:.5" class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span> @Model.DislikesCount
        </button>
    }
    else
    {
        <button type="button" class="btn btn-success disabled btn-xs">
            <span style="opacity:.5" class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> @Model.LikesCount
        </button>

        <button type="button" class="btn btn-danger disabled btn-xs">
            <span style="opacity:1" class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span> @Model.DislikesCount
        </button>
    }

}
else
{
    <a style="opacity:1; " class="btn btn-success btn-xs" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace"
       data-ajax-update="@("#answerLikes_"+ Model.ID)"
       href="@Url.Action("LikeAnswer", "JavnaRasprava", new { answerId = Model.ID })">
        <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true">@Model.LikesCount.ToString()</span>
    </a>

    <a style="opacity:1; " class="btn btn-danger btn-xs" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace"
       data-ajax-update="@("#answerLikes_"+ Model.ID)"
       href="@Url.Action("DislikeAnswer", "JavnaRasprava", new { answerId = Model.ID })">
        <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true">@Model.DislikesCount.ToString()</span>
    </a>
}
