@model JavnaRasprava.WEB.Models.CommentModel

@using ( Ajax.BeginForm( actionName: "AddComment", routeValues: new { lawId = Model.Comment.LawID }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "comments", InsertionMode = InsertionMode.Replace, OnSuccess= "CommentAdded();" } ) )
{

    <div class="form-horizontal">
        <h3>@GlobalLocalization.NewCommentTitle</h3>
        <hr />
        <div class="form-group">
            @Html.LabelFor( model => model.Comment.Text, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.TextAreaFor( model => model.Comment.Text, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.ValidationMessageFor( model => model.Comment.Text, "", new { @class = "text-danger" } )
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalLocalization.AddCommentButton" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}

