@model JavnaRasprava.WEB.Models.RepresentativeAnswerTestModel

@using ( Html.BeginForm( "SubmitRepresentativeAnswer", "JavnaRasprava", FormMethod.Post ) ) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RepresentativeAnswerTestModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor( model => model.QuestionId)
        @Html.HiddenFor( model => model.RepresentativeId )
        @Html.HiddenFor( model => model.LawId)
        

        <div class="form-group">
            Odgovor:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ADMIN - Pošalji odgovor" class="btn btn-default" />
            </div>
        </div>
    </div>
}