@model JavnaRasprava.WEB.Models.News.NewsSearchModel

<div class="panel-body">
    @using ( Html.BeginForm( "Search", "News" ) )
    {
        <div class="row">
            <form class="form-inline">
                @Html.HiddenFor(m => m.ParliamentId)
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.EnumDropDownListFor( m => m.Sort, GlobalLocalization.Global_Search_Sort_ValuePlaceholder, htmlAttributes: new { @class = "form-control" } )
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.TextBoxFor( x => x.QueryString, htmlAttributes: new { @class = "form-control", @placeholder = GlobalLocalization.News_Search_String_ValuePlaceholder } )
                    </div>
                </div>
                <div class="col-md-2">
                    <input class="btn btn-primary btn-block" type="submit" value="Traži">
                </div>
            </form>
        </div>
    }
</div>
