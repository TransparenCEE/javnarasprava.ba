@model JavnaRasprava.WEB.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = GlobalLocalization.Account_Register_PageTitle;
}
<h2>@ViewBag.Title</h2>
<h3>@GlobalLocalization.Account_AssignYour_Message  @ViewBag.LoginProvider @GlobalLocalization.Account</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@GlobalLocalization.Account_ExternalLogin_AssociationForm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-info">
        @GlobalLocalization.Account_ExternalLogin_AuthenticationWithSuccessMessage <strong>@ViewBag.LoginProvider</strong> @GlobalLocalization.Account_2.
        @GlobalLocalization.Account_ExternalLogin_PleaseEnterUsernameMessage
       
    </p>
    @Html.HiddenFor( x => x.UserName );
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.LocationID, new { @class = "col-md-2 control-label" } )
        <div class="col-md-10">
            @Html.DropDownListFor( m => m.LocationID, Model.Locations, GlobalLocalization.Global_Dropdown_ValuePlaceHolder)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.PartyID, new { @class = "col-md-2 control-label" } )
        <div class="col-md-10">
            @Html.DropDownListFor( m => m.PartyID, Model.Parties, GlobalLocalization.Global_Dropdown_ValuePlaceHolder)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.Age, new { @class = "col-md-2 control-label" } )
        <div class="col-md-10">
            @Html.EnumDropDownListFor( m => m.Age, GlobalLocalization.Global_Dropdown_ValuePlaceHolder)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor( m => m.Education, new { @class = "col-md-2 control-label" } )
        <div class="col-md-10">
            @Html.EnumDropDownListFor( m => m.Education, GlobalLocalization.Global_Dropdown_ValuePlaceHolder)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@GlobalLocalization.Account_ExternalLogin_ConfirmationButton" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
