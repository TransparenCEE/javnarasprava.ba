@model JavnaRasprava.WEB.Models.AskRepresentativeQuestionModel

@using ( Ajax.BeginForm( actionName: "AskRepresentative", routeValues: null, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "questionBody", InsertionMode = InsertionMode.Replace } ) )
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.RepresentativeID)
        </div>


        <div class="form-group">
            @Html.Label(GlobalLocalization.Global_Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @class = "form-control" } )
                @Html.RequiredFieldFor( model => model.Text )
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@GlobalLocalization.Representative_AskRep_Button" class="btn btn-default" />
            </div>
        </div>
    </div>
}