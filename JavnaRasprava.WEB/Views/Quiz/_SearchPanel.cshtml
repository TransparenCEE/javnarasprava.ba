@model JavnaRasprava.WEB.Models.Quiz.QuizSearchModel

<div class="panel-body">
    @using ( Html.BeginForm( "Search", "Quiz" ) )
    {
        <div class="row">
            <form class="form-inline">
                @Html.HiddenFor(m=>m.ParliamentId)
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.EnumDropDownListFor( m => m.Sort, GlobalLocalization.Global_Search_Sort_ValuePlaceholder, htmlAttributes: new { @class = "form-control" } )
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">
                        @Html.TextBoxFor( x => x.QueryString, htmlAttributes: new { @class = "form-control", @placeholder =  GlobalLocalization.Global_Search_String_ValuePlaceholder} )
                    </div>
                </div>
                <div class="col-md-2">
                    <input class="btn btn-primary btn-block" type="submit" value="@GlobalLocalization.Global_Search_Button">
                </div>
            </form>
        </div>
    }
</div>
