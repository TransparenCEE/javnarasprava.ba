@model JavnaRasprava.WEB.Models.Quiz.QuizItemResultsModel


@if ( Model.VotesDown != 0 || Model.VotesUp != 0 )
{
    <div class="progress">
        @if ( Model.VotesUpPercentage != 0 )
        {
            <div class="progress-bar progress-bar-success" style="width: @Model.VotesUpPercentage%" aria-valuenow=@Model.VotesUpPercentage aria-valuemin="0" aria-valuemax="100">
                @Model.VotesUpPercentage%
            </div>
        }
        @if ( Model.VotesDownPercentage != 0 )
        {
            <div class="progress-bar progress-bar-danger" style="width: @Model.VotesDownPercentage%" aria-valuenow=@Model.VotesDownPercentage aria-valuemin="0" aria-valuemax="100">
                @Model.VotesDownPercentage%
            </div>
        }
    </div>
}
else
{
    <div class="progress">
        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;">
            0%
        </div>
    </div>
}
<table id="distribucija-odgovora" class="table table-striped">
    <tr>
        <td class="text-left">@GlobalLocalization.JavnaRasprava_CustomAnswersDistribution_Heading</td>
        <td class="text-center">@GlobalLocalization.Global_VoteUp: @Model.VotesUp</td>
        <td class="text-center">@GlobalLocalization.Global_VoteDown: @Model.VotesDown</td>
    </tr>
    <tr>
        <td class="text-left">@GlobalLocalization.Quiz_YourVote</td>
        <td class="text-center">
            @if ( Model.UserVote.HasValue && Model.UserVote.Value )
            {
                <i class="fa fa-3x fa-check-circle" style="color:#5cb85c;"></i>
            }
            else if ( Model.UserVote.HasValue && !Model.UserVote.Value )
            {
                <i class="fa fa-3x fa-check-circle" style="opacity:.15;"></i>
            }else{
            <i class="fa fa-3x fa-check-circle" style="opacity:.15;"></i>
        }
        </td>
        <td class="text-center">
            @if ( Model.UserVote.HasValue && Model.UserVote.Value )
            {
                <i class="fa fa-3x fa-times-circle" style="opacity:.15;"></i>
            }
            else if ( Model.UserVote.HasValue && !Model.UserVote.Value )
            {
                <i class="fa fa-3x fa-times-circle" style="color:#d9534f"></i>
            }else{
            <i class="fa fa-3x fa-times-circle" style="opacity:.15;"></i>
        }
        </td>
    </tr>
</table>
